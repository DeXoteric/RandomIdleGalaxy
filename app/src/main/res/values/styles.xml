<resources>

    <!--główny styl dla całej aplikacji-->
    <style name="GalaxyTheme" parent="Theme.AppCompat.NoActionBar">
        <item name="android:colorBackground">@color/colorBackground</item>
        <item name="colorPrimary">@color/colorBackground</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:textColor">@color/colorText</item>
        <item name="android:buttonStyle">@style/button</item>
        <item name="android:textSize">12sp</item>
    </style>

    <!--styl dla nazw własnych np. surówców-->
    <style name="GalaxyTheme.Names">
        <item name="android:textColor">@color/colorTextAccent</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="GalaxyTheme.Border">
        <item name="android:background">@drawable/shape_background_border</item>
        <!--<item name="android:padding">5dp</item>-->
    </style>

    <style name="button">
        <item name="android:background">@drawable/button</item>
        <item name="android:paddingTop">5dp</item>
        <item name="android:paddingBottom">5dp</item>
        <item name="android:paddingStart">5dp</item>
        <item name="android:paddingEnd">5dp</item>

    </style>

</resources>
